---
export interface Props {
  t: Record<string, any>;
  lang: string;
  compact?: boolean;
  exclude?: string[];
}

const { t, lang, compact = false, exclude = [] } = Astro.props;
const services = t.services.items.filter((s: any) => !exclude.includes(s.id));

// Service-specific visual config
const serviceConfig: Record<string, { color: string; iconBg: string; borderTop: string; glow: string; iconPaths: string }> = {
  'car-paint-correction': {
    color: 'text-brand-accent',
    iconBg: 'bg-brand-accent/15 group-hover:bg-brand-accent/25',
    borderTop: 'border-t-2 border-brand-accent/60',
    glow: 'hover:shadow-brand-accent/10',
    iconPaths: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 11l2-5h10l2 5M3 11h18v4a1 1 0 01-1 1H4a1 1 0 01-1-1v-4z"/><circle cx="7.5" cy="17.5" r="1.5"/><circle cx="16.5" cy="17.5" r="1.5"/>`,
  },
  'glass-polishing': {
    color: 'text-cyan-400',
    iconBg: 'bg-cyan-500/15 group-hover:bg-cyan-500/25',
    borderTop: 'border-t-2 border-cyan-500/50',
    glow: 'hover:shadow-cyan-500/10',
    iconPaths: `<rect x="3" y="4" width="18" height="16" rx="2" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12h18M12 4v16"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M7.5 8l1 1.5" opacity="0.5"/>`,
  },
  'acrylic-restoration': {
    color: 'text-violet-400',
    iconBg: 'bg-violet-500/15 group-hover:bg-violet-500/25',
    borderTop: 'border-t-2 border-violet-500/50',
    glow: 'hover:shadow-violet-500/10',
    iconPaths: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>`,
  },
  'yacht-gelcoat': {
    color: 'text-teal-400',
    iconBg: 'bg-teal-500/15 group-hover:bg-teal-500/25',
    borderTop: 'border-t-2 border-teal-500/50',
    glow: 'hover:shadow-teal-500/10',
    iconPaths: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v13M12 3L4 16h8zM12 7l6 9h-6zM2 20h20M6 20c0 1.5 2.5 2 6 2s6-.5 6-2"/>`,
  },
};
---

<section class={compact ? '' : 'py-24'}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    {!compact && (
      <div class="text-center mb-10">
        <h2 class="section-title">{t.services.section_title}</h2>
        <p class="section-subtitle mx-auto">{t.services.section_subtitle}</p>
      </div>
    )}

    <div class:list={[
      'grid gap-6',
      services.length === 3 ? 'grid-cols-1 md:grid-cols-3' : 'grid-cols-1 md:grid-cols-2'
    ]}>
      {services.map((service: any) => {
        const cfg = serviceConfig[service.id] || serviceConfig['car-paint-correction'];
        const isFeatured = service.tag === 'Most popular';

        return (
          <div class:list={[
            'group relative rounded-2xl border bg-white/5 backdrop-blur-sm p-6 flex flex-col',
            'transition-all duration-300 hover:-translate-y-1 hover:shadow-xl',
            cfg.borderTop,
            cfg.glow,
            isFeatured
              ? 'border-brand-accent/30 bg-gradient-to-b from-brand-accent/5 to-white/3 hover:border-brand-accent/50'
              : 'border-white/10 hover:border-white/20'
          ]}>

            {/* Featured glow ring */}
            {isFeatured && (
              <div class="absolute -inset-px rounded-2xl bg-gradient-to-b from-brand-accent/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
            )}

            {/* Header row: icon + tag */}
            <div class="flex items-start justify-between mb-5">
              <div class:list={[
                'w-14 h-14 rounded-2xl flex items-center justify-center transition-colors duration-200',
                cfg.iconBg
              ]}>
                <svg
                  class:list={['w-7 h-7', cfg.color]}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  set:html={cfg.iconPaths}
                />
              </div>

              {service.tag && (
                <span class:list={[
                  'text-xs font-semibold px-3 py-1 rounded-full border',
                  isFeatured
                    ? 'bg-brand-accent/10 text-brand-accent border-brand-accent/25'
                    : 'bg-brand-gold/10 text-brand-gold border-brand-gold/20'
                ]}>
                  {service.tag}
                </span>
              )}
            </div>

            {/* Title + subtitle */}
            <h3 class="text-xl font-display font-bold text-white mb-1">{service.title}</h3>
            <p class:list={['text-sm mb-4', isFeatured ? 'text-white/60' : 'text-white/45']}>{service.subtitle}</p>

            {/* Price anchor */}
            {service.starting_price && (
              <div class="flex items-center gap-3 mb-5 pb-4 border-b border-white/8">
                <span class:list={['font-bold text-lg', cfg.color]}>{service.starting_price}</span>
                {service.vs_price && (
                  <span class="text-white/30 text-xs">{service.vs_price}</span>
                )}
              </div>
            )}

            {/* Features */}
            <ul class="space-y-2 mb-8 flex-1">
              {service.features.map((f: string) => (
                <li class="flex items-center gap-3 text-sm text-white/70">
                  <svg class:list={['w-4 h-4 flex-shrink-0', cfg.color]} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
                  </svg>
                  {f}
                </li>
              ))}
            </ul>

            {/* Actions */}
            <div class="flex gap-2 mt-auto">
              <a
                href={`/${lang}/services/${service.id}`}
                class="flex-1 text-center py-2.5 px-3 border border-white/15 hover:border-white/30 text-white text-sm font-medium rounded-lg transition-colors whitespace-nowrap overflow-hidden text-ellipsis"
              >
                {t.services.learn_more}
              </a>
              <a
                href={`/${lang}/contact`}
                class:list={[
                  'flex-1 text-center py-2.5 px-3 text-white text-sm font-medium rounded-lg transition-colors whitespace-nowrap overflow-hidden text-ellipsis',
                  isFeatured
                    ? 'bg-brand-accent hover:bg-blue-500'
                    : 'bg-white/10 hover:bg-white/15'
                ]}
              >
                {t.services.get_quote}
              </a>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>
