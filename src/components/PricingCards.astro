---
export interface Props {
  t: Record<string, any>;
  lang: string;
  categoryId?: string;
}

const { t, lang, categoryId } = Astro.props;
const wa = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '351933817788';
const waUrl = `https://wa.me/${wa}?text=Hello+RestoreLab!+I'd+like+to+get+a+quote.`;

const categories = categoryId
  ? t.pricing.categories.filter((c: any) => c.id === categoryId)
  : t.pricing.categories;
---

<section class="py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    {t.pricing.anchor_text && (
      <div class="mb-12 p-5 rounded-xl bg-brand-gold/5 border border-brand-gold/20 text-center">
        <p class="text-brand-gold text-sm font-medium">{t.pricing.anchor_text}</p>
      </div>
    )}

    {categories.map((category: any) => (
      <div class="mb-10">
        <h3 class="text-xl font-display font-semibold text-white/60 mb-8 uppercase tracking-widest text-sm border-b border-white/10 pb-4">
          {category.title}
        </h3>

        <div class:list={[
          'grid gap-6',
          category.packages.length === 1 ? 'grid-cols-1 max-w-md' : 'grid-cols-1 md:grid-cols-3'
        ]}>
          {category.packages.map((pkg: any) => (
            <div class:list={[
              'card relative flex flex-col transition-all duration-300',
              pkg.highlight
                ? 'border-brand-accent/50 bg-brand-accent/5 hover:border-brand-accent'
                : 'hover:border-white/20'
            ]}>
              {pkg.highlight && (
                <div class="absolute -top-3 left-1/2 -translate-x-1/2">
                  <span class="px-4 py-1 bg-brand-accent text-white text-xs font-bold rounded-full uppercase tracking-wider">
                    Most Popular
                  </span>
                </div>
              )}

              <div class="mb-6">
                <h4 class="font-display font-bold text-white text-xl mb-2">{pkg.name}</h4>
                <div class="text-3xl font-display font-bold text-brand-accent mb-1">{pkg.price}</div>
                <div class="text-xs text-white/40 mb-2">{pkg.duration}</div>
                {pkg.savings && (
                  <div class="inline-flex items-center gap-1.5 px-2.5 py-1 bg-green-500/10 border border-green-500/20 rounded-full">
                    <svg class="w-3 h-3 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/>
                    </svg>
                    <span class="text-xs text-green-400 font-medium">{pkg.savings}</span>
                  </div>
                )}
              </div>

              <p class="text-sm text-white/50 mb-6 leading-relaxed">{pkg.description}</p>

              <ul class="space-y-2.5 mb-8 flex-1">
                {pkg.includes.map((item: string) => (
                  <li class="flex items-start gap-2.5 text-sm text-white/70">
                    <svg class="w-4 h-4 text-brand-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
                    </svg>
                    {item}
                  </li>
                ))}
              </ul>

              <div class="mt-auto">
                <div class="text-xs text-white/30 mb-4">
                  <span class="font-medium text-white/50">Best for:</span> {pkg.best_for}
                </div>
                <a
                  href={waUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class:list={[
                    'w-full text-center py-3 rounded-lg font-semibold text-sm transition-colors block',
                    pkg.highlight
                      ? 'bg-brand-accent hover:bg-blue-500 text-white'
                      : 'bg-white/5 hover:bg-white/10 text-white border border-white/10'
                  ]}
                >
                  Get Quote
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}

    <!-- Custom quote CTA -->
    <div class="text-center mt-8 p-8 border border-dashed border-white/15 rounded-2xl">
      <p class="text-white/60 mb-4">{t.pricing.cta_custom}</p>
      <a
        href={waUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="btn-whatsapp"
      >
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        {t.pricing.cta_whatsapp}
      </a>
    </div>
  </div>
</section>
