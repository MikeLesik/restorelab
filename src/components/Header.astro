---
import { WHATSAPP_NUMBER } from '@/lib/constants';

export interface Props {
  t: Record<string, any>;
  lang: string;
  currentPath?: string;
}

const { t, lang, currentPath = '' } = Astro.props;
const wa = WHATSAPP_NUMBER;

function isActive(segment: string): boolean {
  if (!segment) return currentPath === '' || currentPath === '/';
  return currentPath === `/${segment}` || currentPath.startsWith(`/${segment}/`);
}
---

<header class="fixed top-0 left-0 right-0 z-50 border-b border-white/5 bg-brand-dark/80 backdrop-blur-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">

      <!-- Logo -->
      <a href={`/${lang}`} class="flex items-center gap-2 flex-shrink-0">
        <div class="w-8 h-8 bg-brand-accent rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <span class="font-display font-bold text-xl text-white">
          Restore<span class="text-brand-accent">Lab</span>
        </span>
      </a>

      <!-- Nav Desktop -->
      <nav class="hidden md:flex items-center gap-8">
        {[
          { segment: 'services', label: t.nav.services },
          { segment: 'cases',    label: t.nav.cases    },
          { segment: 'pricing',  label: t.nav.pricing  },
          { segment: 'contact',  label: t.nav.contact  },
        ].map(({ segment, label }) => (
          <a
            href={`/${lang}/${segment}`}
            class:list={[
              'text-sm transition-colors relative pb-0.5',
              isActive(segment)
                ? 'text-white font-medium after:absolute after:bottom-0 after:left-0 after:right-0 after:h-px after:bg-brand-accent'
                : 'text-white/60 hover:text-white'
            ]}
          >
            {label}
          </a>
        ))}
      </nav>

      <!-- Right side -->
      <div class="flex items-center gap-2 sm:gap-3">

        <!-- Language Switcher Dropdown â€” desktop only -->
        <div class="hidden md:block relative" id="lang-dropdown">
          <button
            id="lang-btn"
            aria-expanded="false"
            aria-haspopup="true"
            class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm font-medium text-white/70 hover:text-white hover:bg-white/5 transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-accent"
          >
            <svg class="w-3.5 h-3.5 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
            </svg>
            {lang.toUpperCase()}
            <svg class="w-3 h-3 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <div
            id="lang-menu"
            role="menu"
            class="hidden absolute right-0 top-full mt-1 w-28 bg-brand-dark border border-white/10 rounded-xl shadow-2xl overflow-hidden z-50"
          >
            {['en', 'es', 'pt'].map((l) => (
              <a
                href={`/${l}${currentPath}`}
                role="menuitem"
                data-lang-switch={l}
                class:list={[
                  'flex items-center gap-2 px-4 py-2.5 text-sm transition-colors',
                  lang === l
                    ? 'text-brand-accent bg-brand-accent/10 font-medium'
                    : 'text-white/60 hover:text-white hover:bg-white/5'
                ]}
              >
                {l === 'en' ? 'ðŸ‡¬ðŸ‡§' : l === 'es' ? 'ðŸ‡ªðŸ‡¸' : 'ðŸ‡µðŸ‡¹'}
                {l.toUpperCase()}
                {lang === l && (
                  <svg class="w-3 h-3 ml-auto" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>

        <!-- Primary CTA â€” always visible on all breakpoints -->
        <a
          href={`/${lang}/contact`}
          data-event="header_cta_click"
          class="inline-flex items-center px-4 py-2 bg-brand-accent hover:bg-brand-accent/85 text-white text-sm font-semibold rounded-lg transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-accent focus-visible:ring-offset-2 focus-visible:ring-offset-brand-dark"
        >
          {t.nav.cta}
        </a>

        <!-- Burger â€” mobile only -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 text-white/70 hover:text-white focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-accent rounded-lg"
          aria-label="Toggle menu"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <svg id="burger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <nav id="mobile-menu" class="hidden md:hidden border-t border-white/10 bg-brand-dark" aria-label="Mobile navigation">
    <div class="px-4 py-4 flex flex-col gap-1">

      {[
        { segment: 'services', label: t.nav.services },
        { segment: 'cases',    label: t.nav.cases    },
        { segment: 'pricing',  label: t.nav.pricing  },
        { segment: 'contact',  label: t.nav.contact  },
      ].map(({ segment, label }) => (
        <a
          href={`/${lang}/${segment}`}
          class:list={[
            'py-3 px-3 rounded-lg text-sm transition-colors',
            isActive(segment)
              ? 'text-white font-medium bg-white/5 border-l-2 border-brand-accent pl-4'
              : 'text-white/70 hover:text-white hover:bg-white/5'
          ]}
        >
          {label}
        </a>
      ))}

      <!-- Language switcher inside mobile menu -->
      <div class="flex items-center gap-2 pt-3 mt-1 border-t border-white/10">
        <span class="text-white/40 text-xs uppercase tracking-wider">Language</span>
        <div class="flex items-center gap-1.5 ml-auto">
          {['en', 'es', 'pt'].map((l) => (
            <a
              href={`/${l}${currentPath}`}
              data-lang-switch={l}
              class:list={[
                'flex items-center gap-1 px-2.5 py-1.5 rounded-lg text-xs font-semibold border transition-colors',
                lang === l
                  ? 'text-brand-accent border-brand-accent/40 bg-brand-accent/10'
                  : 'text-white/50 border-white/10 hover:text-white hover:border-white/20'
              ]}
            >
              {l === 'en' ? 'ðŸ‡¬ðŸ‡§' : l === 'es' ? 'ðŸ‡ªðŸ‡¸' : 'ðŸ‡µðŸ‡¹'}
              {l.toUpperCase()}
            </a>
          ))}
        </div>
      </div>

    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const btn = document.getElementById('mobile-menu-btn') as HTMLButtonElement | null;
  const menu = document.getElementById('mobile-menu');
  const burgerIcon = document.getElementById('burger-icon');
  const closeIcon = document.getElementById('close-icon');

  btn?.addEventListener('click', () => {
    const isOpen = !menu?.classList.contains('hidden');
    menu?.classList.toggle('hidden');
    btn.setAttribute('aria-expanded', String(!isOpen));
    burgerIcon?.classList.toggle('hidden', !isOpen);
    closeIcon?.classList.toggle('hidden', isOpen);
  });

  // Language dropdown (desktop)
  const langBtn = document.getElementById('lang-btn');
  const langMenu = document.getElementById('lang-menu');

  langBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    const isOpen = !langMenu?.classList.contains('hidden');
    langMenu?.classList.toggle('hidden');
    langBtn.setAttribute('aria-expanded', String(!isOpen));
  });

  document.addEventListener('click', () => {
    langMenu?.classList.add('hidden');
    langBtn?.setAttribute('aria-expanded', 'false');
  });

  // Persist language preference
  document.querySelectorAll<HTMLAnchorElement>('[data-lang-switch]').forEach((link) => {
    link.addEventListener('click', () => {
      const lang = link.dataset.langSwitch;
      if (lang) {
        localStorage.setItem('preferred_lang', lang);
        document.cookie = `preferred_lang=${lang}; path=/; max-age=31536000; SameSite=Lax`;
      }
    });
  });
</script>
