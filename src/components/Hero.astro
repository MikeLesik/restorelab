---
import { WHATSAPP_NUMBER } from '@/lib/constants';

export interface Props {
  t: Record<string, any>;
  lang: string;
}

const { t, lang } = Astro.props;
const wa = WHATSAPP_NUMBER;
const waUrl = `https://wa.me/${wa}?text=Hello+RestoreLab!+I'd+like+to+get+a+quote.`;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-hero pt-16">

  <!-- Background grid pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-[linear-gradient(theme(colors.brand.accent/0.3)_1px,transparent_1px),linear-gradient(90deg,theme(colors.brand.accent/0.3)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
  </div>

  <!-- Glow effects -->
  <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[800px] h-[600px] bg-brand-accent/10 rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute bottom-0 left-1/4 w-[400px] h-[400px] bg-brand-gold/5 rounded-full blur-3xl pointer-events-none"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 text-center">

    <!-- Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 bg-brand-accent/10 border border-brand-accent/20 rounded-full text-brand-accent text-sm font-medium mb-8">
      {t.hero.badge}
    </div>

    <!-- Headline -->
    <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-display font-bold text-white mb-6 leading-tight tracking-tight">
      {t.hero.headline.split('.')[0]}.
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-accent to-blue-300">
        {t.hero.headline.split('.')[1]?.trim() || ''}
      </span>
    </h1>

    <!-- Subheadline -->
    <p class="text-xl md:text-2xl text-white/60 max-w-2xl mx-auto mb-12 leading-relaxed">
      {t.hero.subheadline}
    </p>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-4">
      <a
        href={waUrl}
        target="_blank"
        rel="noopener noreferrer"
        data-event="wa_click"
        class="btn-whatsapp text-base px-8 py-4 text-lg"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        {t.hero.cta_primary}
      </a>
      <a
        href={`/${lang}/cases`}
        class="btn-secondary text-base px-8 py-4 text-lg"
      >
        {t.hero.cta_secondary}
      </a>
    </div>

    <!-- Reply time micro-text -->
    <p class="text-white/40 text-sm mb-12">{t.hero.reply_time}</p>

    <!-- Stats -->
    <div class="grid grid-cols-3 gap-8 max-w-lg mx-auto mb-16">
      <div class="text-center">
        <div class="text-3xl font-display font-bold text-white mb-1">5.0â˜…</div>
        <div class="text-xs text-white/40 uppercase tracking-wider">Google Rating</div>
      </div>
      <div class="text-center border-x border-white/10">
        <div class="text-3xl font-display font-bold text-white mb-1">500+</div>
        <div class="text-xs text-white/40 uppercase tracking-wider">Jobs Done</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-display font-bold text-white mb-1">100%</div>
        <div class="text-xs text-white/40 uppercase tracking-wider">Mobile</div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-white/30">
      <span class="text-xs uppercase tracking-widest">Scroll</span>
      <div class="w-px h-8 bg-white/20 animate-pulse"></div>
    </div>
  </div>
</section>
