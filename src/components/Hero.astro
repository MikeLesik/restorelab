---
import { WHATSAPP_NUMBER } from '@/lib/constants';

export interface Props {
  t: Record<string, any>;
  lang: string;
}

const { t, lang } = Astro.props;
const wa = WHATSAPP_NUMBER;
const waUrl = `https://wa.me/${wa}?text=${encodeURIComponent(t.wa_messages.hero)}`;

// Split H1 on first period: "Restore." / "Don't Replace."
const [h1First, ...h1Rest] = t.hero.headline.split('.');
const h1Second = h1Rest.filter(Boolean).join('.').trim();
---

<section class="relative min-h-screen flex flex-col items-center overflow-hidden bg-gradient-hero pt-16">

  <!-- Background grid -->
  <div class="absolute inset-0 opacity-10 pointer-events-none">
    <div class="absolute inset-0 bg-[linear-gradient(theme(colors.brand.accent/0.3)_1px,transparent_1px),linear-gradient(90deg,theme(colors.brand.accent/0.3)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
  </div>

  <!-- Glow -->
  <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[800px] h-[600px] bg-brand-accent/10 rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute bottom-0 left-1/4 w-[400px] h-[400px] bg-brand-gold/5 rounded-full blur-3xl pointer-events-none"></div>

  <!-- Top spacer -->
  <div class="flex-1"></div>

  <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">

    <!-- H1 -->
    <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-display font-bold text-white mb-6 leading-tight tracking-tight">
      {h1First}.{' '}
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-accent to-blue-300">
        {h1Second}.
      </span>
    </h1>

    <!-- Subheadline -->
    <p class="text-xl md:text-2xl text-white/60 max-w-2xl mx-auto mb-10 leading-relaxed">
      {t.hero.subheadline}
    </p>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-3 justify-center mb-3">
      <a
        href={waUrl}
        target="_blank"
        rel="noopener noreferrer"
        data-event="wa_click"
        class="btn-whatsapp text-base px-8 py-4"
      >
        <svg class="w-5 h-5 flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        {t.hero.cta_primary}
      </a>
      <a
        href={`/${lang}/cases`}
        data-event="cases_click"
        class="btn-secondary text-base px-8 py-4"
      >
        {t.hero.cta_secondary}
      </a>
    </div>

    <!-- Microcopy -->
    <p class="text-white/35 text-sm">{t.hero.reply_time}</p>

  </div>

  <!-- Trust pills â€” centered between microcopy and scroll -->
  <div class="flex-1 flex items-center justify-center px-4">
    <div class="flex flex-nowrap justify-center gap-1 sm:gap-2">
      {t.hero.trust_pills.map((pill: string, i: number) => (
        <span class:list={[
          "px-1.5 py-1 sm:px-3 sm:py-1.5 rounded-full border border-brand-gold/40 backdrop-blur-sm bg-brand-gold/10 text-brand-gold text-[10px] sm:text-xs font-medium hover:-translate-y-0.5 hover:shadow-lg hover:shadow-brand-gold/20 transition-all duration-200 cursor-default whitespace-nowrap",
          i === 0 && "animate-pulse"
        ]}>
          {pill}
        </span>
      ))}
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="pb-8 flex flex-col items-center gap-2 text-white/25">
    <span class="text-xs uppercase tracking-widest">Scroll</span>
    <div class="w-px h-8 bg-white/20 animate-pulse"></div>
  </div>

</section>
