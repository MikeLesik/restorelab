---
import { WHATSAPP_NUMBER } from '@/lib/constants';

export interface Props {
  t: Record<string, any>;
}

const { t } = Astro.props;
const wa = WHATSAPP_NUMBER;
const waUrl = `https://wa.me/${wa}?text=Hello+RestoreLab!+I+have+a+question.`;

const iconMap: Record<string, string> = {
  bolt:   `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>`,
  space:  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"/>`,
  rain:   `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 19v2M12 19v2M16 19v2"/>`,
  user:   `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>`,
  shield: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>`,
};
---

<section class="py-12">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Header -->
    <div class="text-center mb-10">
      <h2 class="section-title">{t.faq.section_title}</h2>
      {t.faq.section_subtitle && (
        <p class="section-subtitle mx-auto mt-3">{t.faq.section_subtitle}</p>
      )}
    </div>

    <!-- Accordion -->
    <div class="rounded-2xl border border-white/10 overflow-hidden divide-y divide-white/8">
      {t.faq.items.map((item: any, i: number) => {
        const answerId = `faq-answer-${i}`;
        return (
          <details class="group faq-item">
            <summary
              aria-controls={answerId}
              class="flex items-center gap-4 px-5 py-4 cursor-pointer select-none hover:bg-white/3 transition-colors duration-150 [&::-webkit-details-marker]:hidden list-none focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-accent focus-visible:ring-inset"
            >

              <!-- Icon -->
              <div class="w-9 h-9 rounded-xl bg-brand-accent/10 border border-brand-accent/10 flex items-center justify-center flex-shrink-0 transition-colors duration-200 group-open:bg-brand-accent/20 group-open:border-brand-accent/25">
                <svg
                  class="w-4 h-4 text-brand-accent"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  set:html={iconMap[item.icon] || iconMap['shield']}
                />
              </div>

              <!-- Question -->
              <span class="flex-1 text-white/85 font-medium text-sm sm:text-[15px] leading-snug group-open:text-white transition-colors">
                {item.question}
              </span>

              <!-- Chevron -->
              <svg
                class="w-4 h-4 text-white/25 flex-shrink-0 transition-transform duration-200 group-open:rotate-180 group-open:text-brand-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>

            <!-- Answer -->
            <div id={answerId} class="px-5 pb-5 pt-1 faq-answer-body" role="region">
              <div class="pl-[3.25rem]">
                <p class="text-white/55 text-sm leading-relaxed" set:html={item.answer} />
              </div>
            </div>
          </details>
        );
      })}
    </div>

    <!-- CTA -->
    <div class="mt-6 flex flex-col sm:flex-row items-center justify-between gap-4 p-5 bg-white/3 border border-white/8 rounded-2xl">
      <div>
        <p class="text-white font-medium text-sm">{t.faq.cta_title}</p>
        <p class="text-white/40 text-xs mt-0.5">{t.faq.cta_subtitle}</p>
      </div>
      <a
        href={waUrl}
        target="_blank"
        rel="noopener noreferrer"
        data-event="wa_click"
        class="inline-flex items-center gap-2 px-4 py-2.5 bg-brand-whatsapp hover:brightness-110 text-white text-sm font-semibold rounded-lg transition-all whitespace-nowrap flex-shrink-0"
      >
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        {t.faq.cta_btn}
      </a>
    </div>
  </div>
</section>

<!-- FAQPage Schema (SEO) -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": t.faq.items.map((item: any) => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
})} />
