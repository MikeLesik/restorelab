---
export interface Props {
  t: Record<string, any>;
  lang: string;
}

const { t, lang } = Astro.props;
const wa = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '351933817788';
---

<section class="py-24 bg-brand-navy/40" id="contact-form">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">

    <div class="text-center mb-12">
      <h2 class="section-title">{t.lead_form.section_title}</h2>
      <p class="section-subtitle mx-auto">{t.lead_form.section_subtitle}</p>
    </div>

    <div class="card">
      <form id="lead-form" class="space-y-5">

        <!-- Name -->
        <div>
          <label class="block text-sm font-medium text-white/70 mb-2">
            {t.lead_form.fields.name} <span class="text-brand-accent">*</span>
          </label>
          <input
            type="text"
            name="name"
            required
            placeholder={t.lead_form.fields.name_placeholder}
            class="w-full px-4 py-3 bg-white/5 border border-white/15 rounded-lg text-white placeholder-white/25 focus:outline-none focus:border-brand-accent focus:ring-1 focus:ring-brand-accent transition-colors text-sm"
          />
        </div>

        <!-- Phone -->
        <div>
          <label class="block text-sm font-medium text-white/70 mb-2">
            {t.lead_form.fields.phone} <span class="text-brand-accent">*</span>
          </label>
          <input
            type="tel"
            name="phone"
            required
            placeholder={t.lead_form.fields.phone_placeholder}
            class="w-full px-4 py-3 bg-white/5 border border-white/15 rounded-lg text-white placeholder-white/25 focus:outline-none focus:border-brand-accent focus:ring-1 focus:ring-brand-accent transition-colors text-sm"
          />
        </div>

        <!-- Service -->
        <div>
          <label class="block text-sm font-medium text-white/70 mb-2">
            {t.lead_form.fields.service}
          </label>
          <select
            name="service"
            class="w-full px-4 py-3 bg-white/5 border border-white/15 rounded-lg text-white focus:outline-none focus:border-brand-accent focus:ring-1 focus:ring-brand-accent transition-colors text-sm appearance-none"
          >
            <option value="" class="bg-brand-navy">â€”</option>
            {t.lead_form.fields.service_options.map((opt: string) => (
              <option value={opt} class="bg-brand-navy">{opt}</option>
            ))}
          </select>
        </div>

        <!-- Location -->
        <div>
          <label class="block text-sm font-medium text-white/70 mb-2">
            {t.lead_form.fields.location}
          </label>
          <input
            type="text"
            name="location"
            placeholder={t.lead_form.fields.location_placeholder}
            class="w-full px-4 py-3 bg-white/5 border border-white/15 rounded-lg text-white placeholder-white/25 focus:outline-none focus:border-brand-accent focus:ring-1 focus:ring-brand-accent transition-colors text-sm"
          />
        </div>

        <!-- Message -->
        <div>
          <label class="block text-sm font-medium text-white/70 mb-2">
            {t.lead_form.fields.message}
          </label>
          <textarea
            name="message"
            rows="4"
            placeholder={t.lead_form.fields.message_placeholder}
            class="w-full px-4 py-3 bg-white/5 border border-white/15 rounded-lg text-white placeholder-white/25 focus:outline-none focus:border-brand-accent focus:ring-1 focus:ring-brand-accent transition-colors text-sm resize-none"
          ></textarea>
        </div>

        <!-- Photo note -->
        <div class="flex items-start gap-2 p-3 bg-brand-accent/5 border border-brand-accent/15 rounded-lg">
          <svg class="w-4 h-4 text-brand-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p class="text-xs text-white/50">{t.lead_form.fields.photo_note}</p>
        </div>

        <!-- Submit -->
        <button
          type="submit"
          class="w-full btn-whatsapp py-4 text-base font-bold"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          {t.lead_form.fields.submit}
        </button>
      </form>
    </div>
  </div>
</section>

<script define:vars={{ waNumber: wa, template: t.lead_form.whatsapp_template }}>
  document.getElementById('lead-form')?.addEventListener('submit', (e) => {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const data = new FormData(form);

    const name = data.get('name') as string || '';
    const phone = data.get('phone') as string || '';
    const service = data.get('service') as string || '';
    const location = data.get('location') as string || '';
    const message = data.get('message') as string || '';

    const text = template
      .replace('{name}', name)
      .replace('{phone}', phone)
      .replace('{service}', service || 'Not specified')
      .replace('{location}', location || 'Not specified')
      .replace('{message}', message || 'No additional info');

    const url = `https://wa.me/${waNumber}?text=${encodeURIComponent(text)}`;
    window.open(url, '_blank', 'noopener,noreferrer');
  });
</script>
