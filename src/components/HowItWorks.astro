---
import { WHATSAPP_NUMBER } from '@/lib/constants';

export interface Props {
  t: Record<string, any>;
  lang: string;
}

const { t, lang } = Astro.props;
const wa = WHATSAPP_NUMBER;
const waUrl = `https://wa.me/${wa}?text=Hello+RestoreLab!+I'd+like+to+get+a+quote.`;

// Unique icon per step index
const stepIcons: string[] = [
  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/><circle cx="12" cy="13" r="3" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"/>`,
  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>`,
  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>`,
  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>`,
];
---

<section class="py-24 bg-brand-navy/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <div class="text-center mb-10">
      <h2 class="section-title">{t.how_it_works.section_title}</h2>
      <p class="section-subtitle mx-auto">{t.how_it_works.section_subtitle}</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 relative">

      <!-- Animated connector line (desktop only) -->
      <div class="hidden lg:block absolute top-8 left-[12.5%] right-[12.5%] h-px bg-white/8 overflow-hidden">
        <div class="absolute inset-0 animate-connector-flow"></div>
      </div>

      {t.how_it_works.steps.map((step: any, i: number) => (
        <div class="relative text-center group">

          <!-- Icon circle -->
          <div class="relative inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-brand-accent/10 border border-brand-accent/20 mb-6 mx-auto transition-all duration-300 group-hover:bg-brand-accent/20 group-hover:border-brand-accent/40 group-hover:scale-105">
            <svg
              class="w-7 h-7 text-brand-accent"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              set:html={stepIcons[i]}
            />
            <!-- Step number badge -->
            <span class="absolute -top-2 -right-2 w-5 h-5 rounded-full bg-brand-dark border border-brand-accent/30 text-brand-accent text-[10px] font-bold flex items-center justify-center">
              {i + 1}
            </span>
          </div>

          <h3 class="font-display font-bold text-white text-lg mb-3">{step.title}</h3>
          <p class="text-white/50 text-sm leading-relaxed">{step.description}</p>
        </div>
      ))}
    </div>

  </div>
</section>
