---
export interface Props {
  t: Record<string, any>;
  lang: string;
}

const { t, lang } = Astro.props;
const wa = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '351933817788';
const waUrl = `https://wa.me/${wa}?text=Hello+RestoreLab!+I'd+like+to+get+a+quote.`;
---

<section class="py-24 bg-brand-navy/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <div class="text-center mb-16">
      <h2 class="section-title">{t.how_it_works.section_title}</h2>
      <p class="section-subtitle mx-auto">{t.how_it_works.section_subtitle}</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 relative">

      <!-- Connecting line (desktop) -->
      <div class="hidden lg:block absolute top-8 left-[12.5%] right-[12.5%] h-px bg-gradient-to-r from-transparent via-brand-accent/30 to-transparent"></div>

      {t.how_it_works.steps.map((step: any, i: number) => (
        <div class="relative text-center">
          <!-- Step number -->
          <div class="relative inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-brand-accent/10 border border-brand-accent/20 mb-6 mx-auto">
            <span class="font-display font-bold text-brand-accent text-xl">{step.number}</span>
          </div>

          <h3 class="font-display font-bold text-white text-lg mb-3">{step.title}</h3>
          <p class="text-white/50 text-sm leading-relaxed">{step.description}</p>
        </div>
      ))}
    </div>

    <!-- CTA Banner -->
    <div class="mt-16 p-8 rounded-2xl bg-brand-accent/10 border border-brand-accent/20 text-center">
      <p class="text-white/80 text-lg mb-6">{t.how_it_works.cta_banner}</p>
      <a
        href={waUrl}
        target="_blank"
        rel="noopener noreferrer"
        data-event="wa_click"
        class="btn-whatsapp"
      >
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        {t.how_it_works.cta_banner_btn}
      </a>
    </div>
  </div>
</section>
